<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/material_drawer_item_padding">

    <ImageView
        android:id="@+id/iv_amigos"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/colorPrimary"/>

    <TextView
        android:id="@+id/tv_amigos_nombre"
        android:text="Holi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_amigos"
        android:padding="@dimen/material_drawer_account_header_horizontal_bottom"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>